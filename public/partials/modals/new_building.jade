.ui.modal.small(ng-controller='NewBuildingCtrl as nbc')
   i.close.icon
   .header {{loc.office.new_b_modal_title}}
   .content
      form.ui.form
         .field
            label {{loc.office.name}}
            input(type='text' ng-model='nbc.name')
         .field
            label {{loc.office.type}}
            select(ng-model='nbc.type')
               option(ng-repeat='(id,type) in loc.buildings.types' value='{{id}}') {{type}}
         .field
            label {{loc.office.region}}
            select(ng-model='nbc.region')
               option(ng-repeat='region in nbc.regions' value='{{region.id}}') {{region.name}}
         .fields.two
            .field
               label X
               input(ng-model='nbc.x')
            .field
               label Y
               input(ng-model='nbc.y')
   .actions
      .ui.black.deny.button {{loc.office.cancel}}
      .ui.positive.button(ng-click='nbc.create()') {{loc.office.construct}}
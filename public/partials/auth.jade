.ui.container.masthead
   .ui.large.inverted.menu.top.attached
      a.toc.item
         i.sidebar.icon
      a.active.item Home
      a.active.item World
      a.active.item Profile
      .right.item
         div.ui.form
            .field
               select.language(ng-model='lang')
                  option(value='en') English
                  option(value='ru') Русский
         div(ng-hide='user.id')
            a.ui.inverted.button(ng-href='#login') Sign in
            a.ui.inverted.button(ng-href='#register') Sign up
         div(ng-show='user.id')
            div Welcome {{user.username}}
            a.ui.inverted.button(href='/logout') Sign out
.ui.container
   .ui.segment
      .ui.grid
         .eight.wide.column
            .ui.teal.image.header
               .content {{loc.site.auth.login}}
            form.ui.large.form(action="/login" method="post")
               ui.stacked.segment
                  .field
                     .ui.left.icon.input
                        i.user.icon
                        input(type="text" name="username" placeholder="{{loc.site.auth.email}}")
                  .field
                     .ui.left.icon.input
                        i.lock.icon
                        input(type="password" name="password" placeholder="{{loc.site.auth.password}}")
                  button.ui.fluid.large.teal.submit.button {{loc.site.auth.login_btn}}
               .ui.error.message
         .eight.wide.column
            .ui.teal.image.header
               .content {{loc.site.auth.registration}}
            form.ui.large.form(action="/registration" method="post")
               ui.stacked.segment
                  .field
                     .ui.left.icon.input
                        i.user.icon
                        input(type="text" name="reg_email" placeholder="{{loc.site.auth.email}}")
                  .field
                     .ui.left.icon.input
                        i.user.icon
                        input(type="text" name="reg_username" placeholder="{{loc.site.auth.username}}")
                  .field
                     .ui.left.icon.input
                        i.lock.icon
                        input(type="password" name="reg_password" placeholder="{{loc.site.auth.password}}")
                        .field
                  .field
                     .ui.left.icon.input
                        i.lock.icon
                        input(type="password" placeholder="{{loc.site.auth.password_r}}")
                  button.ui.fluid.large.teal.submit.button {{loc.site.auth.register_btn}}
               .ui.error.message
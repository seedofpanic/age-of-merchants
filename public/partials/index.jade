.pusher
   .ui.inverted.vertical.masthead.center.aligned.segment
      .ui.container
         .ui.large.secondary.inverted.pointing.menu
            a.toc.item
               i.sidebar.icon
            a.active.item(ng-href='#') {{loc.site.home}}
            a.active.item(ng-href='#map' ng-show='user.id>0') {{loc.site.world}}
            a.active.item(ng-href='#office' ng-show='user.id>0') {{loc.site.office}}
            a.active.item(ng-href='#profile' ng-show='user.id>0') {{loc.site.profile}}
            .right.item(ng-hide='user.id > 0')
               a.ui.inverted.button(ng-href='#auth') {{loc.site.signin}}
               a.ui.inverted.button(ng-href='#auth') {{loc.site.signup}}
            .right.item(ng-show='user.id > 0')
               span {{loc.site.welcome}} {{user.username}}
               a.ui.inverted.button(href='/logout') {{loc.site.signout}}
      .ui.text.container
         h1.ui.inverted.header {{loc.age_of_merchants}}
         h2 {{loc.site.welcome}}
         p
            a.ui.huge.primary.button(ng-href='#office' ng-show='user.id > 0') {{loc.site.to_your_office}}
               i.right.arrow.icon
            a.ui.huge.primary.button(ng-href='#auth' ng-hide='user.id > 0') {{loc.site.signin}}
         p
            a.ui.button.purple.large(href='https://github.com/seedofpanic/age-of-merchants') Github
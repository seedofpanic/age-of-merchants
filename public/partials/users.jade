include inc/header
.ui.container
   .ui.segment
      .ui.dimmer(ng-class='{active: uc.loading}')
      table.ui.table
         thead
            tr
               th {{loc.site.users.name}}
               th {{loc.site.users.gold}}
               th {{loc.site.users.influence}}
               th {{loc.site.users.actions}}
         tbody
            tr(ng-repeat="user in uc.users")
               td {{user.username}}
               td {{user.gold}}
               td {{user.influence}}
               td.collapsing
                  button.ui.button.icon
                     i.icon.mail
         tfoot(ng-show='uc.pages > 1')
            th(colspan="20")
               .ui.pagination.menu
                  a.icon.item(ng-show='uc.current_page > 0' ng-click='uc.get(uc.current_page-1)')
                     i.left.chevron.icon
                  a.item(ng-repeat="(page,value) in uc.getPages() track by $index" ng-click='uc.get(page)' ng-class='{active: page==uc.current_page}') {{page+1}}
                  a.icon.item(ng-show='uc.current_page < uc.pages - 1' ng-click='uc.get(uc.current_page+1)')
                     i.right.chevron.icon
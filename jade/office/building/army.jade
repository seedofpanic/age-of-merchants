div(ng-controller='SoldiersCtrl as sc')
   .ui.message.info(ng-hide='sc.soldiers.length > 0') {{loc.office.building.no_soldiers}}
   div(ng-show='sc.soldiers.length > 0')
      button.ui.button.orange(ng-click='sc.formTroop()') {{loc.office.building.form_troop}}
      table.products.ui.table.form
         thead
            tr
               th {{loc.office.type}}
               th {{loc.office.count}}
               th.collapsing {{loc.office.quality}}
         tbody
            tr(ng-repeat='soldier in sc.soldiers')
               td {{loc.products.types[soldier.product_type]}}
               td
                  div.ui.labeled.input
                   div.ui.label {{soldier.count}}
                   input.inline(ng-model='soldier.recruit')
               td {{soldier.quality | number: 2}}
doctype html
html
  head
    title= title
    script(src='/libs/jquery/dist/jquery.min.js')
    script(src='/javascripts/semantic.min.js')
    script(src='/libs/angular/angular.min.js')
    script(src='/libs/angular-route/angular-route.min.js')
    script(src='/libs/angular-cookies/angular-cookies.min.js')
    script(src='/javascripts/app.min.js')
    link(rel='stylesheet', href='/stylesheets/semantic.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body.pushable(ng-app='App' ng-init='user=#{JSON.stringify(user)}')
    .ui.large.top.fixed.menu.transition.hidden
      .ui.container
        a.active.item {{loc.site.home}}
        a.item {{loc.site.world}}
        a.item {{loc.site.profile}}
        .right.menu
          .item(ng-hide='user.id > 0')
            a.ui.button(ng-href='#auth') {{loc.site.signin}}
          .item(ng-hide='user.id > 0')
            a.ui.primary.button(ng-href='#auth') {{loc.site.signup}}

    .ui.vertical.inverted.sidebar.menu.left
      a.active.item Home
      a.active.item World
      a.active.item Profile
      a.active.item(ng-href='#auth' ng-hide='user.id > 0') {{loc.site.signin}}
      a.active.item(ng-href='#auth' ng-hide='user.id > 0') {{loc.site.signup}}
  div.view(ng-view)
